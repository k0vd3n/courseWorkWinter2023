@model IEnumerable<WebApplication01.Models.PurchasePosition>

@{
    ViewData["Title"] = "Index";
}

<h1>Позиции заказов</h1>
@if (User.IsInRole("PurchaseManager") || User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Создать запись</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Measurement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VendorPurchas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.Id)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Measurement.Measurement)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VendorPurchas.Id)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id">Подробности</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
