@model WebApplication01.Models.ReasonsVendorRefund

@{
    ViewData["Title"] = "Details";
}

<h1>Подробности</h1>

<div>
    <h4>Причины возврата поставщику</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reason)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reason)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PurchasePosition)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PurchasePosition.Id)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("PurchaseManager") || User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Редактировать</a>
    }
    <a asp-action="Index">Обратно к списку</a>
</div>
